{
    "extends": "./../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "composite": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "ignoreDeprecations": "6.0",
        "moduleResolution": "node10",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["node", "jest"]
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "references": [
        {
            "path": "../common"
        }
    ]
}
