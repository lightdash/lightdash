                                            }
                                        ]
                                    }
                                },
                                "tags": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "meta": {
                                    "type": "object",
                                    "properties": {
                                        "metrics": {
                                            "type": "object",
                                            "patternProperties": {
                                                "^[a-z0-9_]+$": {
                                                    "type": "object",
                                                    "properties": {
                                                        "type": {
                                                            "type": "string",
                                                            "enum": [
                                                                "average",
                                                                "boolean",
                                                                "count",
                                                                "count_distinct",
                                                                "date",
                                                                "max",
                                                                "min",
                                                                "number",
                                                                "string",
                                                                "sum"
                                                            ]
                                                        },
                                                        "label": {
                                                            "type": "string"
                                                        },
                                                        "description": {
                                                            "type": "string"
                                                        },
                                                        "sql": {
                                                            "type": "string"
                                                        },
                                                        "hidden": {
                                                            "type": "boolean"
                                                        },
                                                        "round": {
                                                            "type": "number",
                                                            "minimum": 0
                                                        },
                                                        "format": {
                                                            "type": "string",
                                                            "enum": [
                                                                "km",
                                                                "mi",
                                                                "usd",
                                                                "gbp",
                                                                "eur",
                                                                "percent"
                                                            ]
                                                        }
                                                    },
                                                    "required": ["type"]
                                                }
                                            }
                                        },
                                        "dimension": {
                                            "type": "object",
                                            "properties": {
                                                "label": {
                                                    "type": "string"
                                                },
                                                "description": {
                                                    "type": "string"
                                                },
                                                "sql": {
                                                    "type": "string"
                                                },
                                                "hidden": {
                                                    "type": "boolean"
                                                },
                                                "round": {
                                                    "type": "number",
                                                    "minimum": 0
                                                },
                                                "format": {
                                                    "type": "string",
                                                    "enum": [
                                                        "km",
                                                        "mi",
                                                        "usd",
                                                        "gbp",
                                                        "eur",
                                                        "percent"
                                                    ]
                                                },
                                                "time_intervals": {
                                                    "anyOf": [
                                                        {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string",
                                                                "enum": [
                                                                    "RAW",
                                                                    "DAY",
                                                                    "WEEK",
                                                                    "MONTH",
                                                                    "QUARTER",
                                                                    "YEAR",
                                                                    "HOUR",
                                                                    "MINUTE",
                                                                    "SECOND",
                                                                    "MILLISECOND",
                                                                    "MONTH_NUM",
                                                                    "MONTH_NAME",
                                                                    "DAY_OF_WEEK_NAME",
                                                                    "QUARTER_NAME",
                                                                    "DAY_OF_WEEK_INDEX",
                                                                    "DAY_OF_MONTH_NUM",
                                                                    "DAY_OF_YEAR_NUM",
                                                                    "QUARTER_NUM",
                                                                    "YEAR_NUM"
                                                                ]
                                                            }
                                                        },
                                                        {
                                                            "type": "string",
                                                            "enum": [
                                                                "default",
                                                                "OFF"
                                                            ]
                                                        }
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "required": ["name"]
            }
        },
        "metrics": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "model": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "average",
                            "boolean",
                            "count",
                            "count_distinct",
                            "date",
                            "max",
                            "min",
                            "number",
                            "string",
                            "sum"
                        ]
                    },
                    "sql": {
                        "type": "string"
                    },
                    "timestamp": {
                        "type": "string"
                    },
                    "time_grains": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "dimensions": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "filters": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "meta": {
                        "type": "object",
                        "properties": {
                            "hidden": {
                                "type": "boolean"
                            },
                            "round": {
                                "type": "number",
                                "minimum": 0
                            },
                            "format": {
                                "type": "string",
                                "enum": [
                                    "km",
                                    "mi",
                                    "usd",
                                    "gbp",
                                    "eur",
                                    "percent"
                                ]
                            }
                        }
                    }
                },
                "required": ["name", "model", "sql", "type"]
            }
