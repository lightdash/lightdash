{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Backend",
            "port": 9229,
            "restart": true,
            "skipFiles": ["<node_internals>/**"],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/app"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Backend (Dockerless)",
            "port": 9229,
            "restart": true,
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/packages/backend",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}
